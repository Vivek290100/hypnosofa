<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <div class="invoice-container">
    <div class="invoice">
      <div class="header">
        <!-- <h1>Invoice</h1> -->
        <p><strong>OrderID:</strong> <%= orderDetails.orderID %></p>
      </div>
      <div class="details">
        <div class="customer">
          <h2 style="text-align: center;">Billing Information</h2>
          <p><strong>Name:</strong><%= userDetails.name %></p>
          <p><strong>Email:</strong> <%= userDetails.email %></p>
        </div>
        <!-- <div class="shipping">
          <h2 style="text-align: center;">Shipping Information</h2>
          <p><strong>Name:</strong> <%= userDetails.name %></p>
          <p><strong>Email:</strong> <%= userDetails.email %></p>
          <p><strong>Address:</strong> 123 Main St, Anytown, USA</p>
        </div> -->
        <div class="order-details">
          <h2 style="text-align: center;">Order Details</h2>
          <table>
            <thead>
              <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <% orderDetails.products.forEach(product => { %>

              <tr>
                <td><%= productDetails.name %></td>
                <td><%= product.quantity %></td>
                <td>$<%= productDetails.price %>.00</td>
                <td>$<%= (product.quantity * productDetails.price) + 100 %>.00</td>
                <!-- <tr>
                <td>Product B</td>
                <td>1</td>
                <td>$15.00</td>
                <td>$15.00</td>  </tr> -->
                <% }); %>

            </tbody>
          </table>
        </div>
        <div class="payment">
          <h2 style="text-align: center;">Payment Information</h2>
          <p><strong>Total:</strong> $<%= orderDetails.totals.totalprice %>.00</p>
          <p><strong>Payment Method:</strong> <%= orderDetails.paymentMethod %></p>
          <p><strong>Status:</strong> <%= orderDetails.status %></p>
        </div>
      </div>
      <div class="footer">
        <p>Thank you for your purchase!</p>
      </div>
    </div>
  </div>


