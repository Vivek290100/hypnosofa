<style>
  body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f5f5f5; /* Light gray background */
}

.invoice-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.invoice {
  width: 600px; /* Adjust width for wider content */
  height: 94vh;
  padding: 10px;
  background-color: #fff;
  border: 1px solid #ddd; /* Lighter border */
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
  font-size: 0.9rem; /* Slightly smaller font for better fit */
}

.header, .details, .footer {
  padding: 10px;
  border-bottom: 1px solid #ddd; /* Add border at the bottom of each section */
}

.header h1 {
  text-align: center;
  margin: 0;
}

.details h2 {
  margin-top: 15px; /* Adjust spacing between sections */
}

table {
  width: 100%;
  border-collapse: collapse;
}

th, td {
  border: 1px solid #ddd;
  padding: 8px;
  text-align: left; /* Align table content to the left */
}

th:last-child, td:last-child {
  text-align: right; /* Align the last column (total) to the right */
}

.payment p {
  margin-bottom: 5px;
}

.footer p {
  text-align: center;
  margin: 10px 0;
}

</style>