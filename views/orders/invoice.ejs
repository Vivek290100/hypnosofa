<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Invoice</title>
  <link rel="stylesheet" href="styles.css">
</head>
<body>
  <div class="invoice-container">
    <div class="invoice">
      <div class="header">
        <!-- <h1>Invoice</h1> -->
        <p><strong>OrderID:</strong> <%= orderDetails.orderID %></p>
      </div>
      <div class="details">
        <div class="customer">
          <h2 style="text-align: center;">Billing Information</h2>
          <p><strong>Name:</strong><%= userDetails.name %></p>
          <p><strong>Email:</strong> <%= userDetails.email %></p>
        </div>
        <div class="order-details">
          <table>
            <thead>
              <tr>
                <th>Item</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
              </tr>
            </thead>
            <tbody>
              <% orderDetails.products.forEach(product => { %>
              <tr>
                <td><%= productDetails.name %></td>
                <td><%= product.quantity %></td>
                <td>$<%= productDetails.price %>.00</td>
                <td>$<%= (product.quantity * productDetails.price) + 100 %>.00</td>
                <% }); %>
            </tbody>
          </table>
        </div>
        <div class="payment">
          <h2 style="text-align: center;">Payment Information</h2>
          <p><strong>Total:</strong> $<%= orderDetails.totals.totalprice %>.00</p>
          <p><strong>Payment Method:</strong> <%= orderDetails.paymentMethod %></p>
          <p><strong>Status:</strong> <%= orderDetails.status %></p>
        </div>
      </div>
      <div class="footer">
        <p>Thank you for your purchase!</p>
      </div>
    </div>
  </div>


<style>
  body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
  background-color: #f5f5f5;
}

.invoice-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.invoice {
  width: 600px; 
  height: 94vh;
  padding: 10px;
  background-color: #fff;
  border: 1px solid #ddd; 
  box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.1);
  font-size: 0.9rem; 
}
.header, .details, .footer {
  padding: 10px;
  border-bottom: 1px solid #ddd; 
}
.header h1 {
  text-align: center;
  margin: 0;
}
.details h2 {
  margin-top: 15px;
}
table {
  width: 100%;
  border-collapse: collapse;
}
th, td {
  border: 1px solid #ddd;
  padding: 8px;
  text-align: left;
}
th:last-child, td:last-child {
  text-align: right;
}
.payment p {
  margin-bottom: 5px;
}
.footer p {
  text-align: center;
  margin: 10px 0;
}
</style>