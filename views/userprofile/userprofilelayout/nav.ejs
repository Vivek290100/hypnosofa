<%- include('header') -%>

<div class="main-navbar sticky-top ">
    <div class="top-navbar sticky-top">
        <div class="container-fluid ">
            <div class="row justify-content-end">
                <div class="col-md-2 my-auto d-none d-sm-none d-md-block d-lg-block" >

                   <a href="/" style="text-decoration: none;" > <h3 class="brand-name space"   ><img src="/assets/homeimg/brand-logo2.png" alt="Logo" class="brand-logo">Hypnosofa</h3> </a> 
                                        
                </div>
                
                <div class="col-md-5 my-auto">
                    <ul class="nav ">
                    
                        <li class="nav-item">
                            <a class="nav-link" href="/user/cart">
                                <% if (user) { %>
                                    <% if (cartCount >= 0) { %>
                                        <i class="fa fa-shopping-cart"></i> Cart (<%= cartCount %>)
                                    <% } else { %>
                                        <h1>Nothing has happened</h1>
                                    <% } %>
                                <% } %>

                            </a>
                        </li>
                        <% if (user) { %>

                            <li class="nav-item">
                                <a class="nav-link" href="/wishlist">
                                            <i class="fa-solid fa-heart"></i>
                                            <% } %>
                                    
    
                                </a>
                            </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/user/product">
                                <% if (user) { %>
                                <i class="fa-solid fa-store"></i> Products 
                                <% } %>
                            </a>
                
                        </li>
                       
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <% if (user) { %>
                                    <%= user.name %> 
                                  <% } else { %>
                                <i class="fa fa-user"></i> Account
                                <% } %>
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <% if (!user) { %>
                                <li><a class="dropdown-item" href="/user/signup"><i class="fa fa-user"></i> Signup</a></li>
                                <li><a class="dropdown-item" href="/user/login"><i class="fa fa-user"></i> Login</a></li>
                                <% } %>


                                <% if (user) { %>

                                        <li><a class="dropdown-item" href="/user/profile"><i class="fa fa-user"></i> Profile</a></li>
                                        <li><a class="dropdown-item" href="/user/userOrder"><i class="fa fa-list"></i> My Orders</a></li>
        
        
                                        <li><a class="dropdown-item" href="/user/cart"><i class="fa fa-shopping-cart"></i> My Cart</a></li>
                                        <li><a class="dropdown-item" href="/coupon"><i class="fa-solid fa-ticket"></i> Coupons</a></li>
        
        
                                        <li><a class="dropdown-item" href="/user/logout"><i class="fa fa-sign-out"></i> Logout</a></li>

                                
                                <% } %>

                            </ul>
                        </li>
                       
                    </ul>
                </div>
            </div>
        </div>
    </div>
   
</div>
   
   
