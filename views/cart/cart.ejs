    <script>
        $('.increase').click(function() {
        const row = $(this).closest('.main');
        const productId = row.attr('data-product-id'); 
        let quantity = parseInt(row.find('.quantity-input').val());
        const dbquantity = parseFloat(row.find('.dbquantity').text());
        const dbquantityy = dbquantity-quantity
        
        console.log('dbquantity',dbquantity);
        console.log('dbquantityy',dbquantityy);

        if (quantity >= 10 || dbquantityy == 0) {
                    $('#global-alert').show();
                    setTimeout(function() {
                        $('#global-alert').hide();
                    }, 3000);
                    return;
                }

        quantity++;
        row.find('.quantity-input').val(quantity);
        updateQuantity(productId, quantity);
    });
    
        $('.decrease').click(function() {
            const row = $(this).closest('.main');
            const productId = row.attr('data-product-id');
            let quantity = parseInt(row.find('.quantity-input').val());
            if (quantity > 1) {
                quantity--;
                row.find('.quantity-input').val(quantity);
                updateQuantity(productId, quantity);
            }
        });
    
        function updateQuantity(productId, quantity) {
    if (isNaN(quantity)) {
        console.error('Invalid quantity:', quantity);
        return;
    }
            $.ajax({
                url: `/updateQuantity/${productId}`,
                type: 'PUT',
                data: { quantity: quantity },
                success: function(response) {
                    if (response.success) {
                        $(`#update-price-${productId}`).text('â‚¹ ' + response.updatePrice.toFixed(2));
                    } else {
                        console.error(response.message);
                    }
                },
                error: function(xhr, status, error) {
                    console.error(error);
                }
            });
        }
    </script>
    

   
    <script>
        function updateTotalPrice() {
            $.ajax({
