                    <div class="col"><h4><b>SHOPPING CART</b></h4></div>

                    <% if (cartItems && cartItems.length > 0) { %>
                        <div class="col align-self-center text-right text-muted"><%= cartItems.length %> items</div>
                    <% } else { %>
                        <div class="col align-self-center text-right text-muted">0 items</div>
                    <% } %>
                </div>
            </div>
           
            <div class="row border-top border-bottom">
                <% if (cartItems && cartItems.length > 0) { %>
   <% cartItems.forEach(item => { %>
  <div class="row main align-items-center" data-product-id="<%= item.productId._id %>">
    
    <!-- CLOUDINARY IMAGE -->
    <% if (item.productId && item.productId.images && item.productId.images[0]) { %>
      <p class="dbquantity" style="color: #fff;"><%= item.productId.quantity %></p>
      <div class="col-2">
        <a href="/user/mainproduct/<%= item.productId._id %>">
          <img 
            class="img-fluid" 
            src="<%= item.productId.images[0] %>" 
            alt="<%= item.productId.name %>"
            style="width: 7rem; height: 7rem; object-fit: cover; border-radius: 8px;"
          >
        </a>
      </div>
    <% } else { %>
      <div class="col-2">
        <img 
          src="/assets/default-cart.jpg" 
          class="img-fluid" 
          alt="No image"
          style="width: 7rem; height: 7rem; border-radius: 8px;"
        >
      </div>
    <% } %>

    <!-- NAME & PRICE -->
    <div class="col">
      <div class="row"><%= item.productId?.name || 'Unknown Product' %></div>
      <div class="row text-muted">â‚¹<%= item.productId?.price || 0 %></div>
    </div>

    <!-- QUANTITY -->
    <div class="col quantity-control">
      <button class="decrease">-</button>
      <input type="text" class="quantity-input" value="<%= item.quantity %>" max="<%= item.productId?.quantity || 1 %>" readonly>
      <button class="increase">+</button>
    </div>

    <!-- PRICE WITH DISCOUNT -->
    <div class="col pricec">
      <div class="col text-right" id="update-price-<%= item.productId._id %>">
        <% const originalPrice = item.updateprice || item.productId.price; %>
        <% const discountedPrice = item.discountPercentage > 0 ? (originalPrice - (originalPrice * (item.discountPercentage / 100))) : originalPrice; %>
        â‚¹ <%= discountedPrice.toFixed(2) %>
        <% if (item.discountPercentage > 0) { %>
          (<%= item.discountPercentage %>% off)
        <% } %>
      </div>
    </div>

    <!-- REMOVE -->
    <div class="col">
      <a href="/removeItem/<%= item.productId._id %>" class="close" data-product-id="<%= item.productId._id %>">Remove</a>
    </div>
  </div>
  <hr>
<% }); %>
    <% } else { %>
        <div class="text-center mt-3">
            <img src="/assets/homeimg/empty cart.webp" alt="">
            <h4>Your cart is empty!</h4>
            <p>Add items to it now.</p>
        </div>
    <% } %>
            </div>
            
