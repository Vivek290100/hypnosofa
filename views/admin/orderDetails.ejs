<!-- views/admin/orderDetails.ejs -->
<!DOCTYPE html>
<html lang="en">
    <%- include('../adminlayout/header') -%>

<head>
    <link rel="stylesheet" href="/css/adminStyles.css">
    <style>
        .order-container {
            max-width: 1000px;
            margin: 20px auto;
        }
        .order-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.08);
            overflow: hidden;
            margin-bottom: 20px;
        }
        .card-header {
            background: #f8f9fa;
            padding: 18px 25px;
            border-bottom: 1px solid #eee;
            font-size: 18px;
            font-weight: 600;
            color: #333;
        }
        .card-body {
            padding: 25px;
        }
        .info-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 20px;
        }
        .info-item strong {
            display: block;
            color: #555;
            font-size: 14px;
            margin-bottom: 5px;
        }
        .info-item span {
            font-size: 16px;
            color: #222;
            font-weight: 500;
        }
        .status-badge {
            padding: 6px 14px;
            border-radius: 20px;
            font-size: 13px;
            font-weight: bold;
            color: white;
        }
        .status-Pending { background: #ffc107; }
        .status-Processing { background: #007bff; }
        .status-Shipped { background: #6f42c1; }
        .status-Delivered { background: #28a745; }
        .status-Cancelled { background: #dc3545; }
        .status-PaymentFailed { background: #fd7e14; }

        .products-table {
            width: 100%;
            border-collapse: collapse;
            margin: 15px 0;
        }
        .products-table th {
            background: #f1f3f5;
            text-align: left;
            padding: 12px 15px;
            font-weight: 600;
            color: #444;
            font-size: 14px;
        }
        .products-table td {
            padding: 15px;
            border-bottom: 1px solid #eee;
            vertical-align: middle;
        }
        .product-img {
            width: 70px;
            height: 70px;
            object-fit: cover;
            border-radius: 8px;
            border: 1px solid #ddd;
        }
        .total-summary {
            text-align: right;
            padding: 20px 25px;
            background: #f8f9fa;
            border-top: 2px solid #eee;
        }
        .total-line {
            margin: 8px 0;
            font-size: 16px;
        }
        .grand-total {
            font-size: 22px;
            font-weight: bold;
            color: #28a745;
            margin-top: 12px;
        }
        .back-btn {
            margin: 10px 0 20px;
        }
    </style>
</head>

<body>

    <%- include('../adminlayout/slider') -%>

    <section id="content">
        <%- include('../adminlayout/navbar') -%>

        <main>
            <div class="container">
                <div class="order-container">

                    <!-- Back Button -->

                    <a href="/userorder" class=" ">
                        ← Back to Orders
                    </a>
                    <br><br>

                    <!-- Main Order Card -->
                    <div class="order-card">
                        <div class="card-header">Order Details</div>
                        <div class="card-body">

                            <!-- Top Info Grid -->
                            <div class="info-grid">
                                <div class="info-item">
                                    <strong>Order ID</strong>
                                    <span><%= order._id %></span>
                                </div>
                                <div class="info-item">
                                    <strong>Date & Time</strong>
                                    <span><%= order.orderDate %> at <%= order.orderTime %></span>
                                </div>
                                <div class="info-item">
                                    <strong>Status</strong>
                                    <span class="status-badge status-<%= order.status %>">
                                        <%= order.status %>
                                    </span>
                                </div>
                                <div class="info-item">
                                    <strong>Payment Method</strong>
                                    <span><%= order.paymentMethod %></span>
                                </div>
                            </div>

                            <div class="info-grid">
                                <div class="info-item">
                                    <strong>Customer Name</strong>
                                    <span><%= order.customer?.name || 'N/A' %></span>
                                </div>
                                <div class="info-item">
                                    <strong>Customer Email</strong>
                                    <span><%= order.customer?.email || 'N/A' %></span>
                                </div>
                            </div>

                        </div>
                    </div>

                    <!-- Products Card -->
                    <div class="order-card">
                        <!-- <div class="card-header">Products Ordered</div> -->
                        <div class="card-body p-0">
                            <table class="products-table">
                                <thead>
                                    <tr>
                                        <!-- <th>Image</th> -->
                                        <th>Product</th>
                                        <th>Qty</th>
                                        <th>Price</th>
                                        <th>Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% order.products.forEach(item => { %>
                                        <tr>
                                            <!-- <td>
                                                <% if (item.product?.image?.length > 0) { %>
                                                    <img src="<%= item.product.image[0] %>" class="product-img" alt="<%= item.product.name %>">
                                                <% } else { %>
                                                    <span class="text-muted">—</span>
                                                <% } %>
                                            </td> -->
                                            <td><%= item.product?.name || 'Unknown Product' %></td>
                                            <td><%= item.quantity %></td>
                                            <td>₹ <%= (item.product?.price || 0).toFixed(2) %></td>
                                            <td><strong>₹ <%= ((item.product?.price || 0) * item.quantity).toFixed(2) %></strong></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>

                            <!-- Total Summary -->
                            <div class="total-summary">
                                Delivery Charge: <strong>₹ 100</strong>
                                <div class="total-line d-flex">
                                    Subtotal:
<strong>
  ₹ <%= (order.totals.subtotal - 100).toFixed(2) %>
</strong>


                                </div>
                                <% if (order.totals.discountAmount > 0) { %>
                                    <div class="total-line">
                                        Discount <%= order.totals.couponCode ? `(${order.totals.couponCode})` : '' %>: 
                                        <strong>- ₹ <%= order.totals.discountAmount.toFixed(2) %></strong>
                                    </div>
                                <% } %>
                                <div class="grand-total">
                                    Total Paid: ₹ <%= order.totals.totalprice.toFixed(2) %>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </main>
    </section>

    <%- include('../adminlayout/footer') -%>

</body>
</html>