<!-- views/coupon/createCoupon.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <title>Create Coupon</title>

  <style>
    body { font-family: "Roboto", sans-serif; background-color: #f5f5f5; margin: 0; padding: 20px; }
    h2 { text-align: center; color: #004c3f; margin-bottom: 30px; }
    form { max-width: 400px; margin: 0 auto; padding: 30px; background: white; border-radius: 12px; box-shadow: 0 5px 15px rgba(0,0,0,0.1); }
    label { display: block; margin: 15px 0 5px; font-weight: 600; color: #333; }
    input { width: 100%; padding: 12px; border: 1px solid #ddd; border-radius: 6px; box-sizing: border-box; font-size: 16px; }
    button { width: 100%; background: #004c3f; color: white; padding: 14px; border: none; border-radius: 6px; font-size: 17px; cursor: pointer; margin-top: 25px; }
    button:hover { background: #003d32; }
    .modal { display: none; position: fixed; z-index: 1000; left: 0; top: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.5); }
    .modal-content { background: white; margin: 15% auto; padding: 25px; border-radius: 12px; width: 90%; max-width: 400px; text-align: center; box-shadow: 0 10px 25px rgba(0,0,0,0.3); }
    .close { float: right; font-size: 30px; cursor: pointer; }
  </style>
</head>
<body>

  <h2>Add New Coupon</h2>

  <div id="customModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeCustomModal()">×</span>
      <p id="customModalMessage"></p>
    </div>
  </div>

  <form id="createCouponForm">
    <label for="couponCode">Coupon Code</label>
    <input type="text" id="couponCode" name="couponCode" required />

    <label for="minPurchaseAmount">Minimum Purchase Amount</label>
    <input type="number" id="minPurchaseAmount" name="minPurchaseAmount" min="1" required />

    <label for="discountAmount">Discount Amount</label>
    <input type="number" id="discountAmount" name="discountAmount" min="1" required />

    <label for="startDate">Start Date</label>
    <input type="date" id="startDate" name="startDate" required />

    <label for="expiryDate">Expiry Date</label>
    <input type="date" id="expiryDate" name="expiryDate" required />

    <button type="button" onclick="createCoupon()">Add Coupon</button>
  </form>

<script>
  function openCustomModal(message) {
    document.getElementById("customModalMessage").textContent = message;
    document.getElementById("customModal").style.display = "block";
  }

  function closeCustomModal() {
    document.getElementById("customModal").style.display = "none";
  }

  function validateCoupon(formData) {
    const couponCode = formData.get("couponCode")?.trim();
    const minAmount = parseFloat(formData.get("minPurchaseAmount"));
    const discount = parseFloat(formData.get("discountAmount"));
    const startDateStr = formData.get("startDate");
    const expiryDateStr = formData.get("expiryDate");

    if (!couponCode) return "Coupon Code is required";
    if (isNaN(minAmount) || minAmount <= 0) return "Minimum Amount must be greater than 0";
    if (isNaN(discount) || discount <= 0) return "Discount Amount must be greater than 0";
    if (discount >= minAmount) return "Discount cannot be ≥ Minimum Purchase Amount";

    if (!startDateStr || !expiryDateStr) return "Both dates are required";

    const today = new Date();
    today.setHours(0, 0, 0, 0);

    const startDate = new Date(startDateStr);
    const expiryDate = new Date(expiryDateStr);

    if (startDate < today) return "Start Date cannot be before today";
    if (expiryDate < today) return "Expiry Date cannot be before today";
    if (expiryDate <= startDate) return "Expiry Date must be after Start Date";

    return null;
  }

  function createCoupon() {
    const form = document.getElementById("createCouponForm");
    const formData = new FormData(form);

    const error = validateCoupon(formData);
    if (error) {
      openCustomModal(error);
      return;
    }

    const data = {};
    formData.forEach((v, k) => data[k] = v.trim());

    fetch("/admin/create-coupon", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify(data)
    })
    .then(r => r.json())
    .then(d => {
      openCustomModal(d.success ? "Coupon created successfully!" : (d.message || "Failed"));
      if (d.success) setTimeout(() => location.href = "/couponlist", 1500);
    })
    .catch(() => openCustomModal("Network error"));
  }
</script>
</body>
</html>