<script>
  $(document).ready(function() {
  // Initialize ElevateZoom for the first image
  $("#zoom_01").elevateZoom();

  // Event listener for clicking on thumbnail images
  $('.preview-thumbnail a').on('click', function(e) {
    e.preventDefault();

    // Remove 'active' class from all thumbnails
    $('.preview-thumbnail li').removeClass('active');

    // Add 'active' class to the clicked thumbnail
    $(this).parent().addClass('active');

    // Get the target image ID
    var targetImageId = $(this).attr('data-target');

    // Remove 'active' class from all tab panes
    $('.tab-pane').removeClass('active');

    // Add 'active' class to the target tab pane
    $(targetImageId).addClass('active');

    // Reinitialize ElevateZoom for the target image
    $(targetImageId + ' img').elevateZoom();
  });
});

</script>




