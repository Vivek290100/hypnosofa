<%- include('header') -%>
<%- include('nav',{user:user}) -%>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Coupon Code Web Design</title>
    <style>
        /* CSS styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'poppins', sans-serif;
        }

        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin-top: 30px;
        }

        .coupon-card {
            background: linear-gradient(135deg, #ffffff, #adc0b8);
            color: #000000;
            width: calc(100% - 20px);
            max-width: 400px;
            margin: 10px;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .coupon-card h3 {
            font-size: 24px;
            font-weight: 600;
            margin-bottom: 10px;
        }

        .logo {
            width: 80px;
            height: auto;
            border-radius: 8px;
            margin-right: 20px;
        }

        .coupon-content {
            text-align: left;
        }

        .coupon-content hr {
            border: none;
            border-top: 1px solid #ddd;
            margin: 10px 0;
        }

        .offer {
            color: brown;
            font-weight: 900;
            margin-bottom: 10px;
            display: block;
        }

        .coupon-row {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .cpnCode {
            border: 1px dashed #1f1f1f;
            padding: 6px 12px;
            background-color: #a1a1a1;
            border-radius: 4px;
            margin-right: 10px;
        }

        .cpnBtn {
            background: #004c3f;
            color: #fff;
            border: none;
            padding: 6px 12px;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>

<div class="container">
    <% coupons.forEach((couponItem, index) => { %>
        <div class="coupon-card">
            <div class="d-flex align-items-center">
                <img src="/assets/homeimg/brand-logo2.png" class="logo">
                <h3>Hypnosofa</h3>
            </div>
            <div class="coupon-content">
                <hr>
                <span class="offer">Offer: â‚¹<%= couponItem.discountAmount %></span>
                <div class="coupon-row">
                    <span class="cpnCode"><%= couponItem.couponCode %></span>
                    <button class="cpnBtn">Copy Code</button>
                </div>
                <p class="offer">Expires in: <%= couponItem.expiryDate.toISOString().split('T')[0] %></p>
            </div>
        </div>
    <% }) %>
</div>

<script>
    // JavaScript code
    var cpnBtns = document.querySelectorAll(".cpnBtn");
    var cpnCodes = document.querySelectorAll(".cpnCode");

    cpnBtns.forEach((btn, index) => {
        btn.addEventListener("click", function() {
            navigator.clipboard.writeText(cpnCodes[index].innerHTML);
            btn.textContent = "COPIED";
            setTimeout(function() {
                btn.textContent = "Copy Code";
            }, 3000);
        });
    });
</script>

</body>
</html>
