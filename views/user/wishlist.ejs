<body>
    <div class="container">
        <% if (products.length > 0) { %>
        <% products.forEach(product => { %>
            <div class="border shadow-sm"> <!-- Added border and padding -->
                <div class="row">
                    <div class="col-12 col-md-4">
                        <div class="position-relative">
                            <a href="/user/mainproduct/<%= product._id %>">
                                <img src="/assets/product-images/<%= product.images[0] %>" class="img-fluid imgg" alt="<%= product.name %>">
                            </a>
                            <div class="position-absolute bottom-0 end-0 mb-5 mr-5 deleteButton" data-product-id="<%= product._id %>" data-toggle="tooltip" data-placement="top" title="Delete">
